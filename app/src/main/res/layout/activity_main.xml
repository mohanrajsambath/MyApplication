<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.Neighbour_Screen">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gL_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gL_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gL_right_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gL_bottom_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gL_left_border_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0075"/>


    <com.task.nebenan.view.utils.recycler.RecyclerViewWithFooter

            android:id="@+id/rcyVw_search_doctor_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/gL_titlebar"
            app:layout_constraintStart_toEndOf="@+id/gL_left_margin"
            app:layout_constraintEnd_toEndOf="@+id/gL_right_margin"
            app:layout_constraintBottom_toBottomOf="@+id/gL_bottom_margin"
            android:background = "@color/rcy_bg"
            android:visibility="gone"/>
    <Button
            android:id="@+id/btn_RandomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Generate Random Number"
            app:layout_constraintStart_toStartOf="@+id/gL_left_margin"
            app:layout_constraintTop_toTopOf="@+id/gL_titlebar" />

    <TextView
            android:id="@+id/TxtView_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Number : "
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/gL_left_margin"
            app:layout_constraintTop_toBottomOf="@+id/btn_RandomNumber"


            />


</androidx.constraintlayout.widget.ConstraintLayout>